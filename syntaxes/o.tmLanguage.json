{
    "name": "O Language",
    "scopeName": "source.o",
    "patterns": [
        {
            "include": "#comments"
        },
        {
            "include": "#keywords"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#numbers"
        },
        {
            "include": "#functions"
        },
        {
            "include": "#types"
        }
    ],
    "repository": {
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.double-slash.o",
                    "match": "//.*$"
                },
                {
                    "name": "comment.block.o",
                    "begin": "/\\*",
                    "end": "\\*/"
                }
            ]
        },
        "keywords": {
            "patterns": [{
                "name": "keyword.control.o",
                "match": "\\b(if|elif|else|reagent|react|return|each|load|show|meta|get|set|till|parse|eval|spawn|yield|read|write|readln|print|println|count|enlist|distinct|abs|mod|ceil|floor|frac|argv|setenv|getenv|os|system|kill|panic|close|sleep|exit|match|test)\\b"
            }]
        },
        "strings": {
            "patterns": [
                {
                    "name": "string.quoted.double.o",
                    "begin": "\"",
                    "end": "\"",
                    "patterns": [
                        {
                            "name": "constant.character.escape.o",
                            "match": "\\\\."
                        }
                    ]
                }
            ]
        },
        "numbers": {
            "patterns": [
                {
                    "name": "constant.numeric.decimal.o",
                    "match": "\\b([0-9]+\\.?[0-9]*)\\b"
                },
                {
                    "name": "constant.numeric.hexadecimal.o",
                    "match": "\\b0x[0-9a-fA-F]+\\b"
                },
                {
                    "name": "constant.numeric.boolean.o",
                    "match": "\\b[0-1]+b\\b"
                },
                {
                    "name": "constant.numeric.null.o",
                    "match": "\\b0[NW][xhijgefpnzdmtu0]|0[nwNW]\\b"
                }
            ]
        },
        "functions": {
            "patterns": [
                {
                    "name": "entity.name.function.o",
                    "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\("
                }
            ]
        },
        "types": {
            "patterns": [
                {
                    "name": "storage.type.o",
                    "match": "\\b(bool|byte|short|int|long|symbol|char|guid|real|float|timestamp|timespan|datetime|date|month|time|minute|second|dict|signal)\\b"
                }
            ]
        },
        "operators": {
            "patterns": [
                {
                    "name": "keyword.operator.o",
                    "match": "\\+|-|\\*|/|%|\\^|&|\\||!|<|>|=|:|\\?"
                }
            ]
        }
    }
}
